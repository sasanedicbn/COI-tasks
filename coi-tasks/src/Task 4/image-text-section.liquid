{% schema %}
{
  "name": "Image with Text",
  "tag": "section",
  "class": "image-text-section",
  "settings": [
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "Recommended size: 720x576px"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Alt text",
      "default": "Product showcase"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Handcrafted and Responsibly Sourced"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Premium quality materials with sustainable sourcing.</p>"
    },
    {
      "type": "richtext",
      "id": "hidden_text",
      "label": "Expandable Content",
      "default": "<p>Additional details about product craftsmanship.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button text",
      "default": "Learn more"
    },
    {
      "type": "header",
      "content": "Design"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#e4cfcf"
    },
    {
      "type": "range",
      "id": "title_size",
      "label": "Heading size (px)",
      "min": 16,
      "max": 42,
      "step": 1,
      "default": 32
    }
  ],
  "presets": [
    {
      "name": "Image with text",
      "category": "Custom content"
    }
  ]
}
{% endschema %}